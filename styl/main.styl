html 
  height: 100%

body 
  margin: 0
  padding: 0
  background: #000000 url('../img/loading.gif') center center no-repeat
  color: #ffffff
  font-family: sans-serif
  font-size: 13px
  line-height: 20px
  height: 100%


#globe 
  position:relative

  .controls 
    position: absolute
    bottom: 5px
    left: 0
    right: 0
    text-align: center

#loading 
  position: absolute
  top: 30px
  left: 20px
  font-size: 18px
  color: #ffffff



#filter 
  z-index: 999
  position: absolute
  top:100px
  left: 0
  width: 200px

  ul 
    list-style: none

    li
      cursor: pointer

      &:hover
        font-weight: bold


.counters article 
  width: 30%
  margin:auto

  &.tokens 
    float:left

  &.logins 
    float:right

.equalizer
  
  .content 
    position:relative

    .col
      position:absolute
      
      .detail
        bottom:0px
        height:50px
        position:absolute
        width:100%
        
        .icon
          width:50px
          height:50px
          margin:auto
          border-radius:25px
          background:#FFFEFF url('../img/browser/generic.png') center center no-repeat
          background-size:40px 40px
          

      .type
        position:absolute
        
        -webkit-transition:width 0.5s, height 0.5s, left 0.5s, top 0.5s
        transition:width 0.5s, height 0.5s, left 0.5s, top 0.5s
        
        &.signup
          background: transparent url('../img/bar_green.png')
          
        &.login
          background: transparent url('../img/bar_yellow.png')
          
        &.suspicious
          background: transparent url('../img/bar_red.png')
          
        &.resetPassword
          background: transparent url('../img/bar_purple.png')

        
.bubbles
  position:relative
  overflow:hidden
  
  .node
    -webkit-transition:width 0.25s, height 0.25s, left 0.25s, top 0.25s
    transition:width 0.25s, height 0.25s, left 0.25s, top 0.25s
    position:absolute
    border-radius:50%
        
    &.facebook
      background:#465F95
    &.googlePlus
      background:#BA4C3A
    &.wordpress
      background:#464646
    &.github
      background:#353535
    &.instagram
      background:#6081A1
    &.linkedin
      background:#487EB3
    &.twitter
      background:#60A0FC
    &.dropbox
      background:#609EE6
    &.tumblr
      background:#6086B4
    &.blogger
      background:#DF6019
    &.yahoo
      background:#5B216C
    &.soundcloud
      background:#E0631F
      
   