html 
  height: 100%

body 
  margin: 0
  padding: 0
  background: #000000 url('../img/loading.gif') center center no-repeat
  color: #ffffff
  font-family: sans-serif
  font-size: 13px
  line-height: 20px
  height: 100%


#globe 
  position:relative

  .controls 
    position: absolute
    bottom: 5px
    left: 0
    right: 0
    text-align: center
  
#container 
  background: #000000 url('../img/stars.png')


#loading 
  position: absolute
  top: 30px
  left: 20px
  font-size: 18px
  color: #ffffff



#filter 
  z-index: 999
  position: absolute
  top:100px
  left: 0
  width: 200px

  ul 
    list-style: none

    li
      cursor: pointer

      &:hover
        font-weight: bold


.counters article 
  width: 30%
  margin:auto

  &.tokens 
    float:left

  &.logins 
    float:right

.equalizer
  
  .content 
    position:relative

    .col
      position:absolute
      
      .detail
        bottom:10px
        height:30px
        position:absolute
        width:100%
        
        .icon
          width:50px
          height:50px
          margin:auto
          border-radius:25px
          background:#FFFEFF url('../img/browser/generic.png') center center no-repeat
          background-size:40px 40px
          

      .type
        position:absolute
        
        &.signup
          background: #86DD81
          
        &.login
          background: #F6EA3E
          
        &.suspicious
          background: #DE4C4A
          
        &.resetPassword
          background: #C54AFB

        
.bubbles
  .node
    &.facebook
      fill:#465F95
    &.googlePlus
      fill:#BA4C3A
    &.wordpress
      fill:#464646
    &.github
      fill:#353535
    &.instagram
      fill:#6081A1
    &.linkedin
      fill:#487EB3
    &.twitter
      fill:#60A0FC
    &.dropbox
      fill:#609EE6
    &.tumblr
      fill:#6086B4
    &.blogger
      fill:#DF6019
    &.yahoo
      fill:#5B216C
    &.soundcloud
      fill:#E0631F
      
   